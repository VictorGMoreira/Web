<%- include('partials/head') %>
<%- include('partials/header') %>

<!-- Container para o fundo preto -->
<div class="bg-black text-white min-h-screen">

  <div class="container mx-auto p-4">
    <div class="movie-detail flex flex-col md:flex-row">
      <!-- Imagem do Filme -->
      <div class="w-full md:w-1/3">
        <img src="<%= movie.image %>" alt="<%= movie.title %>" class="w-full h-auto">
      </div>

      <!-- Detalhes do Filme -->
      <div class="w-full md:w-2/3 p-4">
        <h2 class="text-4xl font-bold mb-4"><%= movie.title %></h2>
        <p class="text-lg mb-2"><strong>Descrição:</strong> <%= movie.overview %></p>
        <p class="text-lg mb-2"><strong>Ano de Lançamento:</strong> <%= movie.releaseYear %></p>
        <p class="text-lg mb-2"><strong>Duração:</strong> <%= movie.duration %></p>
        <p class="text-lg mb-2"><strong>Avaliação:</strong> <%= movie.rating %> ⭐</p>
        <p class="text-lg mb-2"><strong>Total de Votos:</strong> <%= movie.votes %></p>
        <a href="<%= movie.trailerUrl %>" target="_blank" class="text-blue-500">Assistir Trailer</a>
        <form action="/salvarFilme" method="POST">
          <input type="hidden" name="movieId" value="<%= movie.id %>">
          <input type="hidden" name="title" value="<%= movie.title %>">
          <input type="hidden" name="image" value="<%= movie.image %>">
          <input type="hidden" name="overview" value="<%= movie.overview %>">
          <button type="submit" class="text-2xl text-white hover:text-blue-500">
            <i class="fas fa-save"></i> Salvar
          </button>
        </form>
      </div>
    </div>
    
    <!-- Ícone de Salvar (canto superior direito) -->
    
      
    
  </div>

  <%- include('partials/footer') %>

</div>
